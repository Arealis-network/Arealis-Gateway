# Intent Router Environment Configuration

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
ENV=development

# Database Configuration
DATABASE_URL=postgresql://user:pass@localhost:5432/arealis
REDIS_URL=redis://localhost:6379

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_BATCH_UPLOADED_TOPIC=batch.uploaded
KAFKA_WORKFLOW_START_TOPIC=workflow.start
KAFKA_GROUP_ID=intent-router-group

# Cohere API Configuration
COHERE_API_KEY=your_cohere_api_key_here
COHERE_MODEL=command
COHERE_MAX_TOKENS=100

# Intent Classification Settings
AI_ENHANCEMENT_ENABLED=true
CONFIDENCE_THRESHOLD=0.7
MANUAL_REVIEW_THRESHOLD=0.5

# Monitoring
PROMETHEUS_PORT=8000
