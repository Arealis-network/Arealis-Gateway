# Arealis Gateway v2 Ingest Layer Environment Configuration

# Application Settings
DEBUG=false
API_HOST=0.0.0.0
API_PORT=8001
API_PREFIX=/api/v1

# AWS S3 Configuration
S3_BUCKET_NAME=arealis-invoices
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
S3_KMS_KEY_ID=your_kms_key_id_here

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=arealis_gateway
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL_MODE=prefer

# Database Connection Pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# File Processing
MAX_FILE_SIZE=10485760
CHUNK_SIZE=8192

# Validation Settings
VALIDATION_TIMEOUT=300
MAX_VALIDATION_RETRIES=3

# Intent Classification
INTENT_CLASSIFICATION_TIMEOUT=600
RISK_SCORE_THRESHOLD=0.5
CONFIDENCE_THRESHOLD=0.85

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=

# Security
JWT_SECRET=your_jwt_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# RBI Compliance
AUDIT_RETENTION_DAYS=365
DATA_RETENTION_DAYS=1095
